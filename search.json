---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "description"  : "{{ post.description | strip_html | strip_newlines }}",
      "data": "{{ post.data | join: ', ' }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
  ,
  {% for page in site.pages %}
   {
     {% if page.title != nil %}
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "description"  : "{{ post.description | strip_html | strip_newlines }}",
      "data": "{{ post.data | join: ', ' }}"
     {% endif %}
   } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]